{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@monday-apps/common": ["packages/common"],
      "*": ["node_modules/*", "packages/*/node_modules"]
    }
  },
  "include": ["packages/*/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
